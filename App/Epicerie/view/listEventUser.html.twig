{% extends 'layout.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <h1>Liste des événements</h1>
    <ul>
        {% for event in events %}
            <li>
                <h2>{{ event.name }}</h2>
                <p>{{ event.description }}</p>
                <p>Début : {{ event.startDate|date('d/m/Y H:i') }}</p>
                <p>Fin : {{ event.endDate|date('d/m/Y H:i') }}</p>
                
            </li>
        {% endfor %}
    </ul>
{% endblock %}
