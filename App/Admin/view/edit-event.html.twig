{% extends 'admin.layout.html.twig' %}

{% block body %}
<main class="mainEditEvent">
    

    <form method="post" class="formEditEvent">
<h1>Modifier un événement</h1>
<hr class="traitFormulaireEdit">
        <div class="form-group2" class="divNomEdit">
            <label for="name">Nom</label>
            <input type="text" id="name" name="name" class="form-control3" value="{{ event.name }}" required>
        </div>

        <div class="form-group2" class="divDescEdit">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control4" required>{{ event.description }}</textarea>
        </div>

        <div class="form-group2" class="formDateDebutEvent">
            <label for="start_date">Date de début</label>
            <input type="datetime-local" id="start_date" name="start_date" class="form-control2" value="{{ event.start_date|date('Y-m-d\\TH:i') }}" required>
        </div>

        <div class="form-group2" class="formDateFinEvent">
            <label for="end_date">Date de fin</label>
            <input type="datetime-local" id="end_date" name="end_date" class="form-control2" value="{{ event.end_date|date('Y-m-d\\TH:i') }}" required>
        </div>

        <div class="form-group2" class="divBoutonEvent">
            <label class="input-group-text" for="inputGroupFile01">Image</label>
            <input type="file" name="img" class="form-control" id="inputGroupFile01" required>
        </div>
{{csrf()}}
        <button type="submit" class="boutonEditEvent">Enregistrer</button>
    </form>
    </main>
{% endblock %}
